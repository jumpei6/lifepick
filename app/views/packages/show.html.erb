<div class="package_detail row" >
  <!-- ヘッダー画像の表示 -->
  <div class="package_image" style="background-image: url(<%= @package.image %>);">
  </div>
  <%= simple_format(@package.name) %>
  <hr>
  <div class="package_introduction">
    <%= @package.introduction %>
  </div>
  <hr>

  <!-- サムネイル写真の表示 -->
  <div class="clearfix">
  <% @items.each do |item| %>
      <div class="grid">
        <ul>
          <li><img src="<%= item.image %>"></li>
        </ul>
      </div>
    <% end %>
  </div>
  <hr>

  <!-- 図面の表示 -->
  <p><図面イメージ></p>
  <div class="package_plan" style="background-image: url(<%= @package.plan_image %>);">
  </div>

  <!-- メインボタンの表示 -->
  <div class="#">
    <a href="/packages/<%= @package.id %>/pick/" class="square_btn">Lifepickする！</a>
  </div>

  <!-- サブボタンの表示 -->
  <div class="#">
    <a href="/packages/" class="square_sub_btn">他のパッケージをみる</a>
  </div>

</div>




</div>
